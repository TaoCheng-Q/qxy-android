<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ff_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="52dp"
        android:contentDescription="关注和粉丝的头像"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/ff_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ff_avatar"
        android:layout_marginStart="36dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ff_avatar"
        android:text="昵称"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ff_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ff_nickname"
        android:layout_alignStart="@+id/ff_nickname"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="性别标志 性别"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ff_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ff_sex"
        android:layout_alignStart="@+id/ff_sex"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="城市"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ff_province"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ff_city"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ff_city"
        android:text="省份"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ff_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ff_province"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ff_province"
        android:text="国家"
        android:textSize="18sp" />
</RelativeLayout>