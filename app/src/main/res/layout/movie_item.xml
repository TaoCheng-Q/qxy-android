<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/movie_cover"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:contentDescription="电影封面" />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        >

        <TextView
            android:maxLength="10"
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="电影名"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/movie_actor"
            android:maxLength="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_name"
            android:layout_alignLeft="@id/movie_name"
            android:text="演员一、演员二"
            android:textSize="18sp" />
        <TextView
            android:maxLength="10"
            android:id="@+id/movie_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_actor"
            android:layout_alignLeft="@id/movie_actor"
            android:text="导演"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/movie_rel_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/movie_director"
            android:layout_toRightOf="@id/movie_director"
            android:text="上映区域"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/movie_rel_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_director"
            android:layout_alignLeft="@id/movie_director"
            android:text="{上映时间} 播出"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">
            <TextView
                android:id="@+id/movie_discuss_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热度一"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/movie_theme_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热度二"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/movie_search_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热度三"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/movie_influence_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热度四"
                android:textSize="18sp"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>