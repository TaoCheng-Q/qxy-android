<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shows_cover"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        >
        <TextView
            android:id="@+id/shows_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="综艺名"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/shows_en_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shows_name"
            android:layout_alignLeft="@id/shows_name"
            android:text="综艺英文名"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/shows_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shows_en_name"
            android:layout_alignLeft="@id/shows_en_name"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="10dp"
            android:text="导演"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">
            <TextView
                android:id="@+id/shows_discuss_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热度一"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/shows_theme_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热度二"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/shows_search_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热度三"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/shows_influence_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热度四"
                android:textSize="18sp"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>